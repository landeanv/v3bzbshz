}

# Banner 
function Banner(){
baris_panjang
echo -e "${ungu}           OTHERS      ${Xark} "
baris_panjang
}
# Daftar Menu
function Menu_Features(){
baris_panjang
    echo -e "${ungu}"
    echo " 1. Bot Tele Create Vps   "
    echo " 2. Bot Tele Pointing Domain   "
    echo " 3. Bot Tele Registrasi Ipvps    "
    echo " 4. About"
    echo -e "${Xark}"   
    echo -e "${yellow} x. Exit ${Xark}"
baris_panjang
}

Banner
Menu_Features
read -p "Select [1/4 or x] :  " Ltt
case $Ltt in
1) clear ; Bot_Create ;;
2) clear ; Bot_Pointing ;;
3) clear ; Bot_Regist ;;
4) clear ; About ;;
*) welcome ;;
esac