# About
function About(){
baris_panjang
echo -e "${WhiteB}"
echo -e "Harga Sewa Script"
echo -e "10.000 / 1 ip / 1 bulan"
echo -e "25.000 / 1 ip / Lifetime"
echo -e "35.000 / 2 ip / Lifetime"
echo -e "50.000 / 3 ip / Lifetime"
echo -e "65.000 / 4 ip / Lifetime"
echo -e "85.000 / 5 i0 / Lifetime"
echo -e "${Xark}"
echo -e "${Yellow}"
baris_panjang
baris_panjang
echo -e "Harga Open Source "
echo -e "${Xark}"
echo -e "${GreenBe}"
echo -e "150.000 / Script jadi"
