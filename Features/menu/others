#/bin/bash
BlueCyan='\e[5;36m'
Xark='\e[0m'
ungu='\033[0;35m'
yellow='\e[33m'
WhiteBe='\e[5;37m'
GreenBe='\e[5;32m'
BlueCyan='\e[5;36m'
Xark='\e[0m'
clear
# Garis_Panjang
function baris_panjang(){
echo -e "${BlueCyan} ——————————————————————————— ${Xark} "
}
# Sc Credit Lunatic
function Sc_Credit(){
baris_panjang
    echo -e "${ungu} Terimakasih Telah Menggunakan-"
    echo -e "${ungu} Script Jelek   ARISCTUNNEL V3  ${Xark}"
baris_panjang
}

# Bot Pointing
function Bot_Pointing(){
baris_panjang
echo -e ""
echo -e "${GreenBe}"
